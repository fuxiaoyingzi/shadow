<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.shadowapplication.activity.CustomViewGroupActivity">

    <com.example.administrator.shadowapplication.widget.CustomViewGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@color/road_red"
            android:text="child one"
            android:textSize="20dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@color/md_pink_500"
            android:text="child two"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/tree"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:background="@color/common_blue"
            android:text="child three"
            android:textSize="20dp" />

        <com.example.administrator.shadowapplication.widget.CustomView2
            android:id="@+id/customSun"
            android:layout_width="300dp"
            android:layout_height="200dp" />
    </com.example.administrator.shadowapplication.widget.CustomViewGroup>

    <com.example.administrator.shadowapplication.widget.CustomAnimView
        android:id="@+id/customAnimView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

</LinearLayout>
