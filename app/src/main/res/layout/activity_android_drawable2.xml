<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/calendar_highlighted_day_bg"
    android:paddingTop="20dp"
    android:paddingBottom="20dp"
    tools:context=".Drawable.AndroidDrawableActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bitmap_drawable"
                android:padding="20dp"
                android:text="BitmapDrawable"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/gradient_drawable"
                android:padding="20dp"
                android:text="GradientDrawable"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/shape_drawable"
                android:padding="20dp"
                android:text="ShapeDrawable"
                android:textSize="20sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/state_list_drawable"
                android:padding="20dp"
                android:text="StateListDrawable"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:background="@drawable/layer_drawable"
                android:orientation="vertical"
                android:padding="10dp"
                tools:layout_editor_absoluteX="190dp"
                tools:layout_editor_absoluteY="331dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="I'm a title......."
                    android:textColor="#000000"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="content content content content content content content content..."
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/mImageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/level_list_drawable" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="LevelListDrawable 同样表示一个 Drawable 列表，列表中的每个 item 都有一个 level 值， LevelListDrawable 会根据不同的 level 在不同的 item 之间进行切换。" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/inset_drawable"
                android:text="InsetDrawable" />

            <Button
                android:id="@+id/button"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/scale_drawable"
                android:text="ScaleDrawable" />

            <Button
                android:id="@+id/mClipDrawable"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/clip_drawable"
                android:text="clipDrawable" />


            <Button
                android:id="@+id/mRotateDrawable"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rotate_drawable"
                android:text="RotateDrawable" />

            <ImageView
                android:id="@+id/img"
                android:layout_width="230dp"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/transition_drawable" />

            <Button
                android:id="@+id/rippleButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/ripple_drawable"
                android:text="rippleButton" />


        </LinearLayout>
    </ScrollView>

</LinearLayout>