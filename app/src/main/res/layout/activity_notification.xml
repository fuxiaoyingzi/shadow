<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.administrator.shadowapplication.activity.NotificationActivity">

    <Button
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送通知" />

    <Button
        android:id="@+id/buttonPane2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendCustomNotification"
        android:text="发送自定义通知"
        app:layout_constraintTop_toBottomOf="@+id/buttonPanel" />

    <Button
        android:id="@+id/buttonPane3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendStandardNotification"
        android:text="发送标准通知"
        app:layout_constraintTop_toBottomOf="@+id/buttonPane2" />

    <Button
        android:id="@+id/buttonPane4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送普通通知"
        app:layout_constraintTop_toBottomOf="@+id/buttonPane3" />


    <Button
        android:id="@+id/buttonPane5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送折叠通知"
        app:layout_constraintTop_toBottomOf="@+id/buttonPane4" />

    <Button
        android:id="@+id/buttonPane6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="发送语音通知"
        app:layout_constraintTop_toBottomOf="@+id/buttonPane5" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:text="测试constraintLayout"
        app:layout_constraintLeft_toRightOf="@+id/buttonPane2"
        app:layout_constraintTop_toBottomOf="@+id/buttonPanel" />

</android.support.constraint.ConstraintLayout>
